<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    
    <!-- Push Notifications (Android 13+) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    
    <!-- WebRTC Permissions -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />
    
    <!-- Call Management -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.USE_FULL_SCREEN_INTENT" />
    <uses-permission android:name="android.permission.VIBRATE" />
    
    <!-- Foreground Service Permissions (for background call handling) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_PHONE_CALL" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MICROPHONE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_CAMERA" />
    
    <!-- Income library: full-screen incoming call (WhatsApp-like) -->
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <!-- Android 14+ -->
    <uses-permission android:name="android.permission.MANAGE_OWN_CALLS" />
    
    <!-- Features -->
    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false" />
    <uses-feature android:name="android.hardware.microphone" android:required="false" />

    <application
      android:name=".MainApplication"
      android:label="@string/app_name"
      android:icon="@mipmap/ic_launcher"
      android:roundIcon="@mipmap/ic_launcher_round"
      android:allowBackup="false"
      android:theme="@style/AppTheme"
      android:supportsRtl="true"
      android:hardwareAccelerated="true">
      
      <!-- OneSignal Default Notification Icon -->
      <meta-data
        android:name="com.onesignal.default_notification_icon"
        android:resource="@drawable/ic_stat_ic_launcher" />
      <activity
        android:name=".MainActivity"
        android:label="@string/app_name"
        android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|screenSize|smallestScreenSize|uiMode"
        android:launchMode="singleTask"
        android:windowSoftInputMode="adjustResize"
        android:exported="true">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
      </activity>

      <!-- Incoming Call Activity - Full-screen call UI (like thredmobile) -->
      <activity
        android:name=".IncomingCallActivity"
        android:label="Incoming Call"
        android:theme="@android:style/Theme.Translucent.NoTitleBar.Fullscreen"
        android:launchMode="singleTop"
        android:excludeFromRecents="true"
        android:exported="true"
        android:showOnLockScreen="true"
        android:turnScreenOn="true"
        android:showWhenLocked="true"
        android:taskAffinity=""
        android:allowEmbedded="false" />

      <!-- Call Action Receiver - Handles Answer/Decline from notification buttons -->
      <receiver
        android:name=".CallActionReceiver"
        android:exported="false">
        <intent-filter>
          <action android:name="com.compnay.CALL_ANSWERED" />
          <action android:name="com.compnay.CALL_DECLINED" />
          <action android:name="com.compnay.NOTIFICATION_ANSWER" />
          <action android:name="com.compnay.NOTIFICATION_DECLINE" />
        </intent-filter>
      </receiver>

      <!-- OneSignal Action Receiver - Handles action buttons from OneSignal notifications -->
      <receiver
        android:name=".OneSignalActionReceiver"
        android:exported="false">
        <intent-filter>
          <action android:name="com.compnay.ONESIGNAL_VIEW_POST" />
          <action android:name="com.compnay.ONESIGNAL_VIEW_PROFILE" />
          <action android:name="com.compnay.ONESIGNAL_MARK_READ" />
        </intent-filter>
      </receiver>

      <!-- Ringtone Service - Plays ringtone and vibrates for incoming calls -->
      <service
        android:name=".RingtoneService"
        android:enabled="true"
        android:exported="false"
        android:foregroundServiceType="phoneCall" />

      <!-- Firebase Messaging Service - Handles FCM when app is killed -->
      <service
        android:name=".MyFirebaseMessagingService"
        android:exported="false">
        <intent-filter>
          <action android:name="com.google.firebase.MESSAGING_EVENT" />
        </intent-filter>
      </service>
    </application>
</manifest>
